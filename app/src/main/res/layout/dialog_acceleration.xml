<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mainLin"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_marginVertical="@dimen/_30sdp"
        android:background="@drawable/bg_rounded_01"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_range_min"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Min." />

                <TextView
                    android:id="@+id/txt_range_max"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Max." />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_range_min"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"

                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_02"
                    android:lines="1"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edit_range_max"
                    android:layout_width="0dp"

                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_weight="1"

                    android:background="@drawable/bg_rounded_02"
                    android:lines="1"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/spinner_layout_notch"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/spin_notch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"

                        android:background="@drawable/bg_rounded_02"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spinner_layout_hpf"

                    android:layout_width="0dp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_hpf"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"

                        android:background="@drawable/bg_rounded_02"

                        android:padding="@dimen/_5sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spinner_layout_lpf"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_lpf"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_rounded_02"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/spinner_layout_rms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_21sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="3"
                >

                <Spinner
                    android:id="@+id/spin_rms"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/bg_rounded_02"
                    android:padding="@dimen/_5sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/chk_x_axis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mainColor"
                        android:checked="true"
                        android:text="X-Axis" />

                    <!--                        <TextView-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="X-Axis" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_y_axis"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mainColor"
                        android:text="Y-Axis" />

                    <!--                        <TextView-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="X-Axis" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="right"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_z_axis"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:buttonTint="@color/mainColor"
                        android:text="Z-Axis" />

                    <!--                        <TextView-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:text="X-Axis" />-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_cancle"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@null"
                    android:text="취소"
                    android:textColor="@color/mainColor" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@null"
                    android:text="변경"
                    android:textColor="@color/mainColor" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/txt_axis_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceleration(G)"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>